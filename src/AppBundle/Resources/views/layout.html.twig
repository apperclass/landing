<!DOCTYPE html>
<html>
    <head>

        <meta charset="utf-8">
        <meta name="viewport" content="width=device-width, initial-scale=1.0">
        <title>{% trans %}landing.seo.title{% endtrans %}</title>
        <meta name="description" content="{% trans %}landing.seo.description{% endtrans %}" />
        <meta property="og:image" content="http://apperclass.com/images/shareimage.png" />
        <link rel="shortcut icon" href="favicon.ico" />


        {# HEADER STYLESHEETS #}
        {% stylesheets '@frontend_stylesheets' %}
            <link rel="stylesheet" type="text/css" href="{{ asset_url }}" />
        {% endstylesheets %}

        {# HEADER JAVASCRIPT #}
        {% javascripts '@frontend_header_javascripts' %}
            <script type="text/javascript" src="{{ asset_url }}"></script>
        {% endjavascripts %}

    </head>
    <body>
        {#
            Google Analytics
        #}
        <script>
            (function(i,s,o,g,r,a,m){i['GoogleAnalyticsObject']=r;i[r]=i[r]||function(){
                (i[r].q=i[r].q||[]).push(arguments)},i[r].l=1*new Date();a=s.createElement(o),
                    m=s.getElementsByTagName(o)[0];a.async=1;a.src=g;m.parentNode.insertBefore(a,m)
            })(window,document,'script','//www.google-analytics.com/analytics.js','ga');

            ga('create', 'UA-57365750-1', 'auto');
            ga('send', 'pageview');
        </script>

        {% block main '' %}

        <footer class="page-footer">
            <p>{% trans %}landing.footer.text{% endtrans %}</p>
        </footer>

        {# FOOTER JAVASCRIPTS #}
        {% javascripts '@frontend_footer_javascripts' %}
            <script type="text/javascript" src="{{ asset_url }}"></script>
        {% endjavascripts %}

        <script>
            $(document).ready(function(){
                if (!Modernizr.svg) {
                    $(".logo").attr("src", "images/logo-251-318.png");
                }
            });
        </script>
    </body>
</html>
